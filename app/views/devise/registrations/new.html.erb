<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


  <div class="row justify-content-center container-gray" style="padding: 1% 0%;">
    <div class="form-div">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-field' %>
    </div>

    <div class="form-div">
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name, autocomplete: "Nombre", class: 'form-field' %>
    </div>

    <div class="form-div">
      <%= f.label :last_name %><br />
      <%= f.text_field :last_name, autocomplete: "Apellido", class: 'form-field' %>
    </div>

    <div class="form-div">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-field' %>
    </div>

    <div class="form-div">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-field' %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: 'btn button-gray' %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
