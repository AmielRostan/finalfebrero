<%= form_with(model: bill) do |form| %>
  <% if bill.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(bill.errors.count, "error") %> prohibited this bill from being saved:</h2>

      <ul>
        <% bill.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row justify-content-center container-gray" style="padding: 1% 0%;">
    <div class="form-div">
      <%= form.label :bill_type %>
      <%= form.text_field :bill_type, class: 'form-field' %>
    </div>

    <div class="form-div">
      <%= form.label :begin_date %>
      <input type="date" name="bill[begin_date]" value="<%= bill.begin_date %>" class="form-field" />
    </div>

    <div class="form-div">
      <%= form.label :end_time %>
      <input type="date" name="bill[end_time]" value="<%= bill.end_time %>" class="form-field" />
    </div>

    <div class="form-div">
      <%= form.label :balance %>
      <%#= form.text_field :balance %>
      <input name="bill[balance]" value="<%= bill.balance %>" type="number" min="0" class="form-field">
    </div>
  </div>
  <br>

  <div class="actions">
    <%= form.submit class: 'btn btn-sm button-gray' %>
  </div>
<% end %>
